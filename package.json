  "name": "components",
  "description": "A container and showcase for my components.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/SteveHartzog/components.git"
  },
  "license": "MIT",
  "dependencies": {
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrapper": "^2.1.1",
    "aurelia-dialog": "^1.0.0-rc.2.0.0",
